//===========================================================================
//
// StrifeCoopNPCPlugin
//
//===========================================================================

class StrifeCoopNPCPlugin : Inventory
{
	uint8 talkingWasInterrupted;

	//===========================================================================
	//
	//
	//
	//===========================================================================

	Default
	{
		Inventory.MaxAmount 1;
		+Inventory.UNDROPPABLE
		+Inventory.UNTOSSABLE
		+Inventory.AUTOACTIVATE
		-Inventory.INVBAR
	}

	//===========================================================================
	//
	//
	//
	//===========================================================================

	override void DoEffect(void)
	{
		if (Owner && Owner.player)
		{
			return;
		}

		// Check if NPC was attacked, so that conversations can be cancelled immediately
		// TO DO: find a better way to do this
		bool shouldStopTalking =
		(
			Owner.bInConversation &&
			(
				Owner.InStateSequence(Owner.CurState, Owner.ResolveState('Pain')) ||
				Owner.InStateSequence(Owner.CurState, Owner.ResolveState('Death')) ||
				Owner.InStateSequence(Owner.CurState, Owner.ResolveState('XDeath')) ||
				Owner.Health <= 0
			)
		);

		if (shouldStopTalking)
		{
			Owner.bInConversation = false;
			Owner.A_StopSound(CHAN_VOICE);
			talkingWasInterrupted = 2;
		}

		if (talkingWasInterrupted > 0)
		{
			talkingWasInterrupted--;
		}

		Super.DoEffect();
	}
}
